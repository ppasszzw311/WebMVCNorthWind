@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">顧客的新增、修改、刪除</h3>
    <div>
        <!-- 控制項按鈕 -->
        <button type="button" class="btn btn-primary" id="add-data" data-bs-toggle="modal" data-bs-target="#addModal">
            新增
        </button>
        <button class="btn btn-secondary" id="get-data">更新資料</button>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">操作</th>
                <th scope="col">#</th>
                <th scope="col">Customer ID</th>
                <th scope="col">Company Name</th>
                <th scope="col">Contact Name</th>
                <th scope="col">Contract Title</th>
            </tr>
        </thead>
        <tbody id="custom-data-body">
            
        </tbody>
    </table>
</div>

<!-- add Modal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">新增顧客</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mt-1">
                    <span class="input-group-text">CustomerID</span>
                    <input type="text" aria-label="CustomerID" data-id="CustomerID" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Company Name</span>
                    <input type="text" aria-label="Company Name" data-id="Company Name" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Contact Name</span>
                    <input type="text" aria-label="Contact Name" data-id="Contact Name" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Contact Title</span>
                    <input type="text" aria-label="Contact Title" data-id="Contact Title" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Address</span>
                    <input type="text" aria-label="Address" data-id="Address" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">City</span>
                    <input type="text" aria-label="City" data-id="City" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Region</span>
                    <input type="text" aria-label="Region" data-id="Region" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Postal Code</span>
                    <input type="text" aria-label="Postal Code" data-id="Postal Code" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Country</span>
                    <input type="text" aria-label="Country" data-id="Country" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Phone</span>
                    <input type="text" aria-label="Phone" data-id="Phone" class="form-control">
                </div>
                <div class="input-group mt-1">
                    <span class="input-group-text">Fax</span>
                    <input type="text" aria-label="Fax" data-id="Fax" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary btn-submit-add" data-bs-dismiss="modal">確認新增</button>
            </div>
        </div>
    </div>
</div>

<!-- inform Modal -->
<div class="modal fade" id="informModal" tabindex="-1" aria-labelledby="informModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel" data-bs-dismiss="modal">顧客詳細</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="customer-detail">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

<!-- edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">修改顧客</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="customer-edit">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-success btn-submit-edit" data-bs-dismiss="modal">儲存修改</button>
            </div>
        </div>
    </div>
</div>

<!-- delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">刪除顧客</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="customer-delete">
                <h5>請確認是否刪除本顧客</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger btn-submit-delete"  data-bs-dismiss="modal">確認刪除</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // 在這裡編寫你的 jQuery 代碼
            $("#get-data").click(function () {
                getData();
            });
            $("#custom-data-body").click(function (e) {
                const classList = e.target.classList;
                const dataId = e.target.dataset.id;
                if (classList.contains("information")) {
                    // 查看詳細
                    getDetail(dataId);
                } else if (classList.contains("edit")) {
                    // 修改
                    getEdit(dataId);
                } else if (classList.contains("delete")) {
                    // 刪除
                    renderDeleteModal(dataId);
                }
            })

            // 綁定新增
            $(".btn-submit-add").click(function () {
                const data = getAddDataValue();
                addData(data);
            });

            // 綁定修改
            $(".btn-submit-edit").click(function () {
                const data = getEditDataValue();
                editData(data);
            })
            // 綁定刪除
            $(".btn-submit-delete").click(function () {
                const dataId = $("#customer-delete h5").data("id");
                deleteData(dataId)
            })

        });

        // 取得所有資料
        function getData() {
            $.ajax({
                url: "/api/customer",
                method: "GET",
                dataType: "json",
                success: function (res) {
                    RenderTable(res);
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }

        // 取得單筆資料詳細
        function getDetail(dataId) {
            $.ajax({
                url: `/api/customer/${dataId}`,
                method: "GET",
                dataType: "json",
                success: function (res) {
                    console.log(res)
                    renderDetailModal(res);
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }

        // 新增單筆資料修改
        function getEdit(dataId) {
            $.ajax({
                url: `/api/customer/${dataId}`,
                method: "GET",
                dataType: "json",
                success: function (res) {
                    renderEditModal(res)
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }

        // 取得新增視窗的值
        function getAddDataValue() {
            return data = {
                customerID: $(`#addModal [data-id="CustomerID"]`).val(),
                companyName: $(`#addModal [data-id="Company Name"]`).val(),
                contactName:  $(`#addModal [data-id="Contact Name"]`).val(),
                contactTitle:  $(`#addModal [data-id="Contact Title"]`).val(),
                address:  $(`#addModal [data-id="Address"]`).val(),
                city:  $(`#addModal [data-id="City"]`).val(),
                region:  $(`#addModal [data-id="Region"]`).val(),
                postalCode:  $(`#addModal [data-id="Postal Code"]`).val(),
                country: $(`#addModal [data-id="Country"]`).val(),
                phone: $(`#addModal [data-id="Phone"]`).val(),
                fax: $(`#addModal [data-id="Fax"]`).val()
            };
        }
        // 完成後清空AddDataValue
        function clearAddModalValue() {
            $(`#addModal [data-id="CustomerID"]`).val("");
            $(`#addModal [data-id="Company Name"]`).val("");
            $(`#addModal [data-id="Contact Name"]`).val("");
            $(`#addModal [data-id="Contact Title"]`).val("");
            $(`#addModal [data-id="Address"]`).val("");
            $(`#addModal [data-id="City"]`).val("");
            $(`#addModal [data-id="Region"]`).val("");
            $(`#addModal [data-id="Postal Code"]`).val("");
            $(`#addModal [data-id="Country"]`).val("");
            $(`#addModal [data-id="Phone"]`).val("");
            $(`#addModal [data-id="Fax"]`).val("");
        }
        // 取得修改視窗的值
                function getEditDataValue() {
            return data = {
                customerID: $(`#editModal [data-id="CustomerID"]`).text(),
                companyName: $(`#editModal [data-id="Company Name"]`).val(),
                contactName:  $(`#editModal [data-id="Contact Name"]`).val(),
                contactTitle:  $(`#editModal [data-id="Contact Title"]`).val(),
                address:  $(`#editModal [data-id="Address"]`).val(),
                city:  $(`#editModal [data-id="City"]`).val(),
                region:  $(`#editModal [data-id="Region"]`).val(),
                postalCode:  $(`#editModal [data-id="Postal Code"]`).val(),
                country: $(`#editModal [data-id="Country"]`).val(),
                phone: $(`#editModal [data-id="Phone"]`).val(),
                fax: $(`#editModal [data-id="Fax"]`).val()
            };
        }

        // 新增資料
        function addData(data) {
            console.log(data)
            $.ajax({
                url: `/api/customer`,
                method: "POST",
                data: JSON.stringify(data),
                contentType: "application/json",
                dataType: "json",
                success: function (res) {
                    getData();
                    clearAddModalValue();
                },
                error: function (err) {
                    console.log(err)
                    clearAddModalValue();
                }
            });
        }

        // 修改資料
        function editData(data) {
            $.ajax({
                url: `/api/customer/${data.customerID}`,
                method: "PUT",
                data: JSON.stringify(data),
                contentType: "application/json",
                dataType: "json",
                success: function (res) {
                    console.log(res);
                    getData();
                },
                error: function (err) {
                    console.log(err)
                }
            });
        }

        // 刪除資料
        function deleteData(data) {
            $.ajax({
                url: `/api/customer/${data}`,
                method: "DELETE",
                contentType: "application/json",
                dataType: "json",
                success: function (res) {
                    getData();
                },
                error: function (err) {
                    console.log(err)
                }
            });
        }

        // 畫表格
        function RenderTable(data) {
            let tableBodyItem = ``
            if (data.length > 0) {
                for (let i = 0; i < data.length; i++) {
                    const id = i + 1;
                    const item = data[i];
                    tableBodyItem += `
                            <tr>
                                    <td>
                                      <button type="button" class="btn btn-info information" data-bs-toggle="modal" data-bs-target="#informModal"  data-id=${item.customerID}>
                                        詳細
                                      </button>
                                              <button type="button" class="btn btn-success edit" data-bs-toggle="modal" data-bs-target="#editModal"  data-id=${item.customerID}>
                                                修改
                                      </button>
                                              <button type="button" class="btn btn-danger delete" data-bs-toggle="modal" data-bs-target="#deleteModal"  data-id=${item.customerID}>
                                                刪除
                                      </button>
                                    </td>
                                <th scope="row">${id}</th>
                                <td>${item.customerID}</td>
                                <td>${item.companyName}</td>
                                <td>${item.contactName}</td>
                                        <td>${item.contactTitle}</td>
                            </tr>`
                }
                $("#custom-data-body").html(tableBodyItem);
            } else {
                $("#custom-data-body").html("沒有內容");
            }
        }


        // 建立詳細表格
        function renderDetailModal(data) {
            $("#customer-detail").html(`
                    <div class="input-group mt-1">
                            <span class="text">CustomerID: </span>
                            <p class="mx-1">${filterNullValue(data.customerID)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Company Name: </span>
                            <p class="mx-1">${filterNullValue(data.companyName)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Contact Name: </span>
                            <p class="mx-1">${filterNullValue(data.contactName)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Contact Title: </span>
                            <p class="mx-1">${filterNullValue(data.contactTitle)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Address: </span>
                            <p class="mx-1">${filterNullValue(data.address)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">City: </span>
                            <p class="mx-1">${filterNullValue(data.city)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Region: </span>
                            <p class="mx-1">${filterNullValue(data.region)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Postal Code: </span>
                            <p class="mx-1">${filterNullValue(data.postalCode)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Country: </span>
                            <p class="mx-1">${filterNullValue(data.country)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Phone: </span>
                            <p class="mx-1">${filterNullValue(data.phone)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Fax: </span>
                            <p class="mx-1">${filterNullValue(data.fax)}</p>
                        </div>
            `);

        }


        // 建立修改視窗
        function renderEditModal(data) {
            $("#customer-edit").html(`<div class="input-group mt-1">
                            <span class="text">CustomerID: </span>
                            <p class="mx-1" data-id="CustomerID">${filterNullValue(data.customerID)}</p>
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Company Name: </span>
                            <input type="text" aria-label="Company Name" data-id="Company Name" value="${filterNullValue(data.companyName)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Contact Name: </span>
                            <input type="text" aria-label="Contact Name" data-id="Contact Name" value="${filterNullValue(data.contactName)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Contact Title: </span>
                            <input type="text" aria-label="Contact Title" data-id="Contact Title" value="${filterNullValue(data.contactTitle)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Address: </span>
                            <input type="text" aria-label="Address" data-id="Address" value="${filterNullValue(data.address)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">City: </span>
                            <input type="text" aria-label="City" data-id="City" value="${filterNullValue(data.city)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Region: </span>
                            <input type="text" aria-label="Region" data-id="Region" value="${filterNullValue(data.region)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Postal Code: </span>
                            <input type="text" aria-label="Postal Code" data-id="Postal Code" value="${filterNullValue(data.postalCode)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Country: </span>
                            <input type="text" aria-label="Country" data-id="Country" value="${filterNullValue(data.country)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Phone: </span>
                            <input type="text" aria-label="Phone" data-id="Phone" value="${filterNullValue(data.phone)}" class="form-control">
                        </div>
                        <div class="input-group mt-1">
                            <span class="text">Fax: </span>
                            <input type="text" aria-label="Fax" data-id="Fax" value="${filterNullValue(data.fax)}" class="form-control">
                        </div>`)
        }
        // 建立刪除視窗
        function renderDeleteModal(data) {
            $("#customer-delete").html(`<h5 data-id="${data}">請確認是否刪除 ${data} 顧客</h5>`)
        }

        // 去除Null值
        function filterNullValue(inputString) {
            if (inputString === "null") {
                return "";
            } else {
                return inputString;
            }
        }

        function handleClick() {
            alert("information")
        }
    </script>
}
